
<div class="add_product_container">
  <%= link_to "Add product", new_admin_item_path, class: "btn btn-primary", role: "button" %>
</div>

<table class="table mt-3">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>

      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>

        <td class="table_btn">
            
          <%= button_to "Delete", admin_item_path(item), method: :delete, class: 'btn btn-danger',  form: { data: { turbo_confirm: "Are you sure?" }} %>
          <%= link_to "Edit", edit_admin_item_path(item), class: "btn btn-primary", role: "button" %>
          
        </td>
      </tr>
      
    <% end %>
    
  </tbody>
</table>